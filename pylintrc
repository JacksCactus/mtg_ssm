[MESSAGES CONTROL]
# See:
#   http://docs.pylint.org/features.html
#
# W0232: Class has no __init__ method.
# R0903: Too few public methods
# I0011: Locally disable
disable = W0232,R0903,I0011,

[REPORTS]
# Set the output format. Available formats are text, parseable, colorized, msvs
# (visual studio) and html. You can also give a reporter class, eg
# mypackage.mymodule.MyReporterClass.
output-format=colorized

# Tells whether to display a full report or only the messages
reports=no

[BASIC]
# Minimum line length for functions/classes that require docstrings, shorter
# ones are exempt.
docstring-min-length=6

# Include a hint for the correct naming format with invalid-name
include-naming-hint=yes

# Regular expression matching correct method names
method-rgx=([a-z_][a-z0-9_]{2,30}|test_[a-z_][a-z0-9_]{2,50})$

# Regular expression matching correct class attribute names
class-attribute-rgx=([A-Za-z_][A-Za-z0-9_]{2,30}|(__.*__)|id)$

[FORMAT]
# Maximum number of characters on a single line.
max-line-length=80

# Expected format of line ending, e.g. empty (any line ending), LF or CRLF.
expected-line-ending-format=LF

[TYPECHECK]
# List of members which are set dynamically and missed by pylint inference
# system, and so shouldn't trigger E0201 when accessed. Python regular
# expressions are accepted.
generated-members=metadata,__table__

[VARIABLES]
# A regular expression matching the name of dummy variables (i.e. expectedly
# not used).
dummy-variables-rgx=_|_.*|unused|unused_.*

[DESIGN]
# Argument names that match this expression will be ignored.
ignored-argument-names=_|_.*|unused|unused_.*
